<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Thème clair par défaut de l'application -->
    <style name="Theme.MakeupApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Personnalisez les attributs du thème ici -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnError">@color/white</item>
        <item name="textColor">@color/black</item>
    </style>

    <!-- Thème sombre (optionnel) -->
    <style name="Theme.AppName.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grey_700</item>
        <item name="colorBackground">@color/black</item>
    </style>
</resources>
